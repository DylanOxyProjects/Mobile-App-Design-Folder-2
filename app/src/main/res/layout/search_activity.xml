<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">


    <Toolbar
        android:id="@+id/toolbarID2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
    </Toolbar>


    <Spinner
        android:id="@+id/spinnerID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarID2"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/back"
        android:entries="@array/dietRestriction"
        android:spinnerMode="dropdown"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerID1"
        android:layout_below="@+id/spinnerID1"
        android:background="@drawable/back"
        android:entries="@array/servingRestriction"
        android:spinnerMode="dropdown"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerID3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerID2"
        android:layout_below="@+id/spinnerID2"
        android:background="@drawable/back"
        android:entries="@array/prepTime"
        android:spinnerMode="dropdown"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/search"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/spinnerID1"
        android:layout_alignBottom="@+id/spinnerID1"
        android:layout_toStartOf="@+id/buttonID"
        android:text="Enter Diet Restriction:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/spinnerID2"
        android:layout_alignBottom="@+id/spinnerID2"
        android:layout_alignStart="@+id/textView"
        android:text="Enter Number of Servings:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/spinnerID3"
        android:layout_alignBottom="@+id/spinnerID3"
        android:layout_alignStart="@+id/textView2"
        android:text="Enter Cook Time:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>